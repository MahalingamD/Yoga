<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/inflate_nav_menu_root_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginTop="@dimen/margin_5"
    android:layout_marginBottom="@dimen/margin_5"
    android:orientation="vertical"
    android:padding="@dimen/margin_6">

    <RelativeLayout
        android:id="@+id/inflate_nav_menu_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/inflate_nav_menu_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:padding="@dimen/margin_8"
            android:src="@drawable/ic_exe" />

        <TextView
            android:id="@+id/inflate_nav_menu_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/inflate_nav_menu_image"
            android:fontFamily="@font/gilroy_regular"
            android:text="Test"
            android:textColor="#626262"
            android:textSize="@dimen/font_16" />


    </RelativeLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_color"
        android:visibility="gone"
        android:layout_marginTop="@dimen/margin_10"/>

    <RelativeLayout
        android:id="@+id/condition_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_marginBottom="@dimen/margin_8"
        android:gravity="center"
        android:visibility="gone">

        <TextView
            android:id="@+id/condition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:fontFamily="@font/gilroy_regular"
            android:gravity="center"
            android:padding="@dimen/margin_8"
            android:text="Terms &amp; Conditions"
            android:textColor="@color/color_62"
            android:textSize="@dimen/font_14" />

        <View
            android:id="@+id/ellipe"
            android:layout_width="4dp"
            android:layout_height="4dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/condition"
            android:background="@drawable/ic_ellipse" />

        <TextView
            android:id="@+id/policy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_toRightOf="@+id/ellipe"
            android:fontFamily="@font/gilroy_regular"
            android:gravity="center"
            android:padding="@dimen/margin_8"
            android:text="Policy"
            android:textColor="@color/color_62"
            android:textSize="@dimen/font_14" />
    </RelativeLayout>


</LinearLayout>
