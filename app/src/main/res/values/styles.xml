<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/login_red_medium</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/grey</item>
    </style>

    <style name="LoginTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/login_red_light</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="android:layout_marginTop">@dimen/margin_10</item>
        <item name="android:textColorHint">@color/dark_grey</item>
    </style>

    <style name="margin_style">
        <item name="android:layout_marginLeft">@dimen/margin_16</item>
        <item name="android:layout_marginRight">@dimen/margin_16</item>
        <item name="android:layout_marginTop">@dimen/margin_10</item>
    </style>

    <style name="title_text">
        <item name="android:textSize">@dimen/font_18</item>
        <item name="android:color">@color/black</item>
        <item name="android:fontFamily">@font/gilroy_bold</item>
    </style>

    <style name="sub_title_text">
        <item name="android:textSize">@dimen/font_16</item>
        <item name="android:color">@color/black</item>
        <item name="android:fontFamily">@font/gilroy_bold</item>
    </style>

    <style name="desc_text">
        <item name="android:textSize">@dimen/font_14</item>
        <item name="android:color">@color/dark_grey</item>
        <item name="android:fontFamily">@font/gilroy_regular</item>
    </style>

    <style name="light_desc">
        <item name="android:textSize">@dimen/font_14</item>
        <item name="android:color">@color/grey</item>
        <item name="android:fontFamily">@font/gilroy_light</item>
    </style>
</resources>
